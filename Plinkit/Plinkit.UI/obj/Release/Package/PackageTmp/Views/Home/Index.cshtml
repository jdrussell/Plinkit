@model Plinkit.UI.ViewModels.DailyLinksViewModel

@{
    ViewBag.Title = "pLinkIt";
}
<div class="hero-unit">
    <hgroup class="title">        
        <h4>@ViewBag.Message</h4>
    </hgroup>
    <p>.net Developer? Need to stay on top of Technology, Tools and Techniques?</p>        
    <p><img src="~/Images/plinkit-small.gif" alt="pLinkIt" /></p>
</div>

<div class="row-fluid">    
    <div class="span12">
        <h3 class="clear">@Model.Date.ToString("dd MMMM yyyy")</h3>
    </div>        
</div>
<div class="row-fluid">    
    <div class="span2">
        @{ Html.RenderPartial("_CategorySelector", Model); }  
    </div> 
    <div class="span6">         
        <div class="tab-content">
            <div class="tab-pane fade in active" id="webdevelopment">
                @{ Html.RenderPartial("_LinksDisplay", Model.WebDevelopmentLinks); }
            </div>
            <div class="tab-pane fade" id="entityframework">
                @{ Html.RenderPartial("_LinksDisplay", Model.EntityFrameworkLinks); }
            </div>
            <div class="tab-pane fade" id="visualstudio">
                @{ Html.RenderPartial("_LinksDisplay", Model.VisualStudioLinks); }                
            </div>            
            <div class="tab-pane fade" id="javascript">
                @{ Html.RenderPartial("_LinksDisplay", Model.JavascriptLinks); }                
            </div>  
            <div class="tab-pane fade" id="cleancode">
                @{ Html.RenderPartial("_LinksDisplay", Model.CleanCodeLinks); }                
            </div>
            <div class="tab-pane fade" id="productivity">
                @{ Html.RenderPartial("_LinksDisplay", Model.ProductivityLinks); }                
            </div>
            <div class="tab-pane fade" id="unittesting">
                @{ Html.RenderPartial("_LinksDisplay", Model.UnitTestingLinks); }                
            </div>
            <div class="tab-pane fade" id="computerscience">
                @{ Html.RenderPartial("_LinksDisplay", Model.ComputerScienceLinks); }                
            </div>
            <div class="tab-pane fade" id="functionalprogrammingandfsharp">
                @{ Html.RenderPartial("_LinksDisplay", Model.FunctionalProgrammingAndFSharpLinks); }                
            </div>
            <div class="tab-pane fade" id="computingtechnology">
                @{ Html.RenderPartial("_LinksDisplay", Model.ComputingTechnologyLinks); }                
            </div>
            <div class="tab-pane fade" id="unclebob">
                @{ Html.RenderPartial("_LinksDisplay", Model.UncleBobLinks); }                
            </div>          
        </div>
    </div>    
    <div class="span4">
        <h4>Archive</h4>
        <div id="linksArchive"></div>
        @{ Html.RenderPartial("_Adverts"); }        
    </div>
</div>

<script type="text/javascript">
    setActiveContent();

    function setActiveContent() {
        
        var selectedCategory = "@Model.SelectedCategory.ToLower()";
        
        $(".tab-pane").each(function () {
            $(this).removeClass("in").removeClass("active");
        });

        var activePane = $("#" + selectedCategory);
        $(activePane).addClass("in").addClass("active");
    }
</script>
